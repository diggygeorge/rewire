{
  "manifest_version": 3,
  "name": "Rewire",
  "version": "1.0",
  "description": "A desktop screen time limiter with fun unlock challenges.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["tabs", "storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}